
<h1> Listing Tasks</h1>

<div style = "float:right; margin-right: 5%; padding: 2%;"><%= link_to 'New Project', new_task_path, class:"btn btn-primary", style: "color:white" %></div>
<div class="media-body "> 
<table class="table table-hover">
  <thead>
    <tr>
      <th>Task</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.project_id %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

